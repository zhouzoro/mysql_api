if data && data[0]
	-var doc = data[0]
	.title.header.table-header
		i.icon.dropdown
		label= doc["项目名称"]
	.content
		a.edit-project.ui.button.basic.small.orange(title='编辑项目信息' data-id= doc.id)
			i.icon.edit
			span 编辑
		table.ui.celled.table
			tbody
				each val, key in doc
					if key !=='init_date' && key !=='id' && key !=='项目名称'
						tr
							td
								a.cursor-pointer(onclick="$('.title.item.statistic[data-type="+key+"]').click()")
									i.icon.bar.chart
									span= key
							td.display= val
								if val=="已发证"
									a.cert-download(href='/files/certificate.zip' download='证书'+doc.id) 证书下载